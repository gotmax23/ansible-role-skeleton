---
- name: Install {{ role_name | regex_replace('_' ' ') | title }}
  hosts: all
  become: true

  tasks:
    - name: Update apt cache
      when: ansible_pkg_mgr == "apt"
      ansible.builtin.apt:
        update_cache: true
        cache_valid_time: 3600

    - name: Install {{ role_name | regex_replace('_' ' ') | title }}
      ansible.builtin.include_role:
        name: "gotmax23.{{ role_name }}"
